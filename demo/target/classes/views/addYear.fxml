<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.financeX.controllers.MenuButtons.AddYearController">
    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #1B5A2A; -fx-padding: 15;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Add new Year" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" prefHeight="158.0" prefWidth="230.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #E8F5E9;">
            <VBox alignment="CENTER_LEFT" spacing="10">
                <!-- Year Input -->
                <Label style="-fx-font-size: 14px; -fx-text-fill: #1B5A2A;" text="Enter Year:" />
                <TextField fx:id="yearTextField" prefHeight="41.0" prefWidth="198.0" promptText="Enter the year" style="-fx-background-color: #f1f8f6; -fx-text-fill: #1B5A2A; -fx-border-color: #388E3C;" />
            </VBox>

            <HBox alignment="CENTER" spacing="20">
                <!-- Buttons -->
                <Button fx:id="confirmButton" onAction="#handleConfirm" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-padding: 10px;" text="OK" />
                <Button fx:id="cancelButton" onAction="#handleClose" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-padding: 10px;" text="Cancel" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
