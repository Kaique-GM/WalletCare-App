<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.financeX.controllers.TablesController">
    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1B5A2A; -fx-padding: 15;">
            <Button onAction="#toggleMenu" style="-fx-text-fill: white; -fx-font-size: 14; -fx-background-color: #388E3C;" text="☰ Menu" />
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="WalletCare">
                <HBox.margin>
                    <Insets left="5.0" />
                </HBox.margin>
            </Label>
            <Label fx:id="categoryName" alignment="CENTER" prefHeight="27.0" prefWidth="162.0" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Category">
                <HBox.margin>
                    <Insets left="360.0" />
                </HBox.margin>
            </Label>
            <Label fx:id="labelYear" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Year">
                <HBox.margin>
                    <Insets left="510.0" />
                </HBox.margin>
            </Label>
        </HBox>
    </top>

    <!-- Left Menu -->
    <left>
        <VBox fx:id="menuPane" spacing="15" style="-fx-background-color: #388E3C; -fx-padding: 20;" visible="true">
            <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Main Menu" />

            <!-- Button for Overview -->
            <Button fx:id="btOverview" onAction="#handleOverview" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="🏠 Overview" />

            <!-- Button for Settings -->
            <Button fx:id="btLogout" onAction="#onLogout" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="🚪 Logout" />

            <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Change View" />

            <!-- Button for changing Month -->
            <Button onAction="#handleMonthChange" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="📆 Change Month" />

            <!-- Button for changing Year -->
            <Button onAction="#handleYearChange" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="📆 Change Year" />
         <Button onAction="#handleNewYear" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="📆 Add new Year" />

            <!-- New Section for Entries, Fixed Expenses, and Variable Expenses -->
            <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Expense Categories" />

            <!-- Buttons for switching between Entries, Fixed Expenses, and Variable Expenses -->
            <Button onAction="#handleIncomeView" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="📄 Income" />
            <Button onAction="#handleFixedExpensesView" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="💰 Fixed Expenses" />
            <Button onAction="#handleVariableExpensesView" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="💵 Variable Expenses" />
        </VBox>
    </left>

    <!-- Right Menu -->
    <right>
        <VBox fx:id="operationPane" spacing="15" style="-fx-background-color: #388E3C; -fx-padding: 20;" visible="true">
            <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Income" />

            <Button onAction="#handleAddIncome" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="➕ Add Income" />
            <Button onAction="#handleRemoveIncome" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="➖ Remove Income" />
            <Button onAction="#handleEditIncome" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="✏ Edit Income" />

            <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Fixed Expense" />

            <Button onAction="#handleAddFixedExpense" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="➕ Add Fixed Expense" />
            <Button onAction="#handleRemoveFixedExpense" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="➖ Remove Fixed Expense" />
            <Button onAction="#handleEditFixedExpense" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="✏ Edit Fixed Expense" />
         <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Variable Expense" />

            <Button onAction="#handleAddVariableExpense" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="➕ Add Variable Expense" />
            <Button onAction="#handleRemoveVariableExpense" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="➖ Remove Variable Expense" />
            <Button onAction="#handleEditVariableExpense" style="-fx-text-fill: white; -fx-background-color: #4CAF50;" text="✏ Edit Variable Expense" />
        </VBox>
    </right>

    <!-- Main Content -->
    <center>
        <VBox fx:id="mainContent" spacing="20" style="-fx-padding: 20; -fx-background-color: #E8F5E9;">
            <HBox alignment="CENTER" spacing="15">
                <!-- Table View for Data -->
                <VBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1B5A2A;" text="📊 Monthly Data" />
               <Label fx:id="monthName" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1B5A2A;" text="January" />
                    <TableView fx:id="dataTable" style="-fx-pref-width: 800; -fx-pref-height: 400;">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="100" text="ID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="id" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="descriptionColumn" prefWidth="250" text="Description">
                                <cellValueFactory>
                                    <PropertyValueFactory property="description" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="valueColumn" prefWidth="200" text="Value">
                                <cellValueFactory>
                                    <PropertyValueFactory property="value" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="dateColumn" prefWidth="250" text="Date">
                                <cellValueFactory>
                                    <PropertyValueFactory property="date" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
