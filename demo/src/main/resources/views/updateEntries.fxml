<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.financeX.controllers.Entries.UpdateEntriesController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Update Income Entry" />

    <VBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Income ID:" />
        <TextField fx:id="incomeIdField" promptText="Enter income ID..." />

        <Label text="New Description:" />
        <TextField fx:id="descriptionField" promptText="Enter new description..." />

        <Label text="New Value:" />
        <TextField fx:id="valueField" promptText="Enter new value..." />
    </VBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="confirmButton" onAction="#onConfirm" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Update" />
        <Button fx:id="cancelButton" onAction="#onCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancel" />
    </HBox>
</VBox>
